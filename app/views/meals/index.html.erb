<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Meals
    </h1>
  </div>
</div>

<hr>

 <div>
    <form action="/find_meal" method = "post">
      <div>
        <label for="diet_check">Select your dietary needs</label>
        <div>
          <%a=1%>
          <%Diet.pluck(:diet_name).each do |diet|%>
            <input id = "diet_check" type="checkbox" name="<%=diet%>" <%= "checked" if @diets.include?(diet) %> />
            <%=diet%>
            <%a=a+1%>
          <%end%>
        </div>
      </div>

      <button>
        Find meals
      </button>
    </form>
  </div>

<hr>

  <div>
    <form action="/meals">
      <button>
        Reset list
      </button>
    </form>
  </div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Meal name
        </th>

        <th>
          Image
        </th>

        <th>
          Description
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Creator
        </th>

        <th>
        </th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>

        <td>
          <%= meal.meal_name %>
        </td>

        <td>
          <%= meal.image %>
        </td>

        <td>
          <%= meal.description %>
        </td>

        <td>
          <%= meal.restaurant.restaurant_name %>
        </td>        

        <td>
          <%= meal.creator.username %>
        </td>

        <td>
          <a href="/meals/<%= meal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
