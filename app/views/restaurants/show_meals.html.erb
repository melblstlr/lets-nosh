<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @restaurant.restaurant_name %>
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/restaurants" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>
  
      <div class="col">
        <a href="/add_meal/<%=@restaurant.id%>" class="btn btn-block btn-outline-secondary">
          Add meal
        </a>
      </div>
    
    </div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Meal name
        </th>

        <th>
          Description
        </th>

        <th>
          Diets
        </th>

        <th>
          Likes
        </th>
        
        <th>
          Dislikes
        </th>

        <th>
        </th>
      </tr>

      <% @restaurant.meals.each do |meal| %>
      <tr>

        <td>
          <a href="/meals/<%= meal.id %>">
            <%= meal.meal_name %>
          </a>
        </td>

        <td>
          <%= meal.description %>
        </td>

        <td>
          <%= meal.diet.pluck(:diet_name).to_sentence %>
        </td>        

         <td>
          <%= meal.likes.count %>
        </td>

        <td>
          <%= meal.dislikes.count %>
        </td>

        <td>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


<hr>