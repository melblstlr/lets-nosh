<!-- Edit restaurant form-->

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit restaurant
    </h2>

    <form action="/modify_restaurant/<%= @restaurant.id %>"  method="post" >
      <div class="form-group">
        <label for="restaurant_name_box">
          Restaurant name
        </label>

        <input type="text" id="restaurant_name_box" name="query_restaurant_name" class="form-control" value="<%= @restaurant.restaurant_name %>">
      </div>

      <div class="form-group">
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" class="form-control" value="<%= @restaurant.address %>">
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" class="form-control" value="<%= @restaurant.image %>">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="chain_box" name="query_chain" value="1" <%= "checked" if @restaurant.chain %>>

        <label class="custom-control-label"
          for="chain_box">Chain</label>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update restaurant
      </button>
    </form>
  </div>
</div>




